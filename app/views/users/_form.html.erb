<div class="row">
  <%= form_for(@user, :role => 'form') do |f| %>
    <%= render 'layouts/errors', index: @user %>

    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :class => "form-control", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email,"Email" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="row">
      <div class="form-group col-md-4">
        <%= f.submit 'Submit', :class => 'btn btn-primary' %>
        <%= link_to 'Cancel', request.headers["HTTP_REFERER"], :class => 'btn btn-default' %>
      </div>
    </div>

  <% end %>
</div>
