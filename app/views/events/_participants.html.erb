<!-- for larger formats... -->

	<table class="table">
		<thead>
			<th class="col-md-2"></th>
			<th class="col-md-2"></th>
			<th class="col-md-2"></th>
		</thead>
		<tbody>
			<% participants.each do |participant| %>
				<tr>
					<% if participant.source_id.blank? %>
						<td>
							<span class="text-muted"><%= participant.account_name %></span>
						</td>
						<td>
							<%= link_to new_user_from_account_path(participant), title: "Add to WhoPaid users" do %>
								<i class="fa fa-user-plus"></i>
							<% end %>
						</td>
					<% else %>
						<td>
							<span><%= participant.account_name %></span>
						</td>
						<td></td>
					<% end %>
					<td class="text-right"><%= number_to_currency(participant.balance) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
