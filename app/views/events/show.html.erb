<div class="container-fluid">
	
	<div class="panel panel-primary">
		<div class="panel-heading">
			<div class="row">
				<h3 class="panel-title col-lg-6"><%= @event.name %></h3>
				<h3 class="panel-title col-lg-6 text-right"><%= number_to_currency(@event.total_expenses) %></h3>
			</div>
		</div>
	</div>
	
	<div class="row">

		<div class="col-md-2 col-md-push-10">							
			<%= render partial: 'new_payment' %>
		</div>

		<div  class="col-md-3 col-md-pull-2">
			<div class="well">
				<div class="row vertical-align">
					<h4 class="col-md-6">Participants</h4>
					<%= link_to "Add participant", new_event_account_path(@event), title: "Add new account" %>
				</div>
				<%= render partial: 'participants', locals: { participants: @participants } %>
				<div class="row vertical-align">		
					<h4 class="col-md-6">Friends</h4>
				</div>
				<%= render partial: 'friends', locals: { friends: @friends } %>
			</div>
		</div>
		
		<div class="col-md-7 col-md-pull-2">
			<div class="well">
				<h4>Payments</h4>
				<%= render partial: 'payments', locals: { payments: @payments } %>
			</div>
		</div>

	</div>
</div>

<script type="text/javascript">
  $('.datepicker').datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true});
</script>
