<div class="container-fluid">
	
	<div class="panel panel-primary">
		<div class="panel-heading">
			<div class="row">
				<h3 class="panel-title col-xs-6"><%= @event.name %></h3>
				<h3 class="panel-title col-xs-6 text-right"><%= number_to_currency(@event.total_expenses) %></h3>
			</div>
		</div>
	</div>
	
	<div class="row">

		<div class="col-lg-2 col-lg-push-10 col-sm-6 col-xs-12">							
			<%= render partial: 'new_payment' %>
		</div>

		<div  class="col-lg-3 col-lg-pull-2 col-sm-6 col-xs-12">
			<div class="well">
				<div class="row vertical-align">
					<h4 class="col-lg-6">Participants</h4>
					<%= link_to new_event_account_path(@event), title: "Add new account" do %>
						<i class="fa fa-user-plus"></i>
					<% end %>
					<%= link_to statements_email_event_accounts_path(@event), title: "Send account statements to all users.", confirm: "Send email statments to all participants?" do %>
						<i class="fa fa-envelope"></i>
					<% end %>
				</div>
				<%= render partial: 'participants', locals: { participants: @participants } %>
				<div class="row vertical-align">		
					<h4 class="col-lg-6">Friends</h4>
				</div>
				<%= render partial: 'friends', locals: { friends: @friends } %>
			</div>
		</div>
		
		<div class="col-lg-7 col-lg-pull-2 col-sm-12 col-xs-12">
			<div class="well">
				<h4>Payments</h4>
				<%= render partial: 'payments', locals: { payments: @payments } %>
			</div>
		</div>

	</div>
</div>

<script type="text/javascript">
  $('.datepicker').datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true});
</script>
