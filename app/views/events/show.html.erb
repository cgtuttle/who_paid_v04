<div class="container-fluid">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<div class="container-fluid">
				<div class="row vertical-align">
					<div class="col-md-12 col-lg-3">
						<span class="h3 event-title"><%= @event.name %></span>
					</div>
					<div class="col-sm-12 col-lg-9">
						<div>
							<%= render partial: 'new_payment' %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="well col-md-4">
		<div class="row vertical-align">
			<h4 class="col-md-6">Participants</h4>
			<%= link_to "Add participant", new_event_account_path(@event), title: "Add new account" %>
		</div>
		<%= render partial: 'participants', locals: { participants: @participants } %>
		<%= render partial: 'friends', locals: { friends: @friends } %>
	</div>

	<div class="well col-md-8">
		<h4 class="col-md-12">Payments</h4>
		<%= render partial: 'payments', locals: { payments: @payments } %>
	</div>

</div>

<script type="text/javascript">
  $('.datepicker').datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true});
</script>
