<div class="container-fluid">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<div class="container-fluid">
				<div class="row vertical-align">
					<div class="col-md-3">
						<span class="h3 event-title"><%= @event.name %></span>
					</div>
					<div class="col-md-9">
						<div>
							<%= render partial: 'shared/new_payment' %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="well col-md-4">
		<div class="row">
			<h4 class="col-md-6">Participants</h4>
			<%= link_to new_event_account_path(@event), title: 'Add new participant' do %>
				<div class="col-md-6 top-space-8"><span class="control-icon-light">&oplus;</span> Add new</div>
			<% end %>
		</div>
		<%= render partial: 'shared/participants', locals: { participants: @participants } %>
		<%= render partial: 'shared/friends', locals: { friends: @friends } %>
	</div>

	<div class="well col-md-8">
		<h4 class="col-md-12">Transactions</h4>
		<%= render partial: 'shared/transactions', locals: { transactions: @transactions } %>
	</div>

</div>

<script type="text/javascript">
  $('.datepicker').datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true});
</script>
