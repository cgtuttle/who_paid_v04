<div class="panel-group" id="event_to_accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">

    <div class="panel-heading" role="tab" id="event_account_to_heading">
      <div class="panel-title">
        <div class="form-group">
          <%= f.label :user_to, "To", class: 'small text-muted' %>
          <%= f.collection_select :to_user_id, current_user.all_friends, :id, :display_name, {selected: @payment.non_blank_payee_account, include_blank: true}, {class: "account-selector form-control input-sm"} %>        
        </div>

        <!-- collapsable new user form control-->
        <div class="form-group">
          <%= link_to "#new_guest_to_event", title: "New user", data: { toggle: :collapse, parent: "#event_to_accordian"}, aria: {controls: "new_guest_from_event"} do %>
            <i class="fa fa-plus-circle"></i> New user...
          <% end %>
        </div>

      </div>
    </div>

    <!-- collapsable new user form -->    
    <div id="new_guest_to_event", class="panel-collapse collapse" role="tabpanel" aria-labelledby="event_account_to_heading">
      <div class="panel-body">
        <div class="form-group">
          <%= label_tag 'first_name', nil, class: 'sr-only' %>
          <%= text_field_tag 'user_to[first_name]', nil, placeholder: "First name", class: 'form-control input-sm' %>
        </div>
        <div class="form-group">
          <%= label_tag 'last_name', nil, class: 'sr-only' %>
          <%= text_field_tag 'user_to[last_name]', nil, placeholder: "Last name",  class: 'form-control input-sm' %>
        </div>
        <div class="form-group">
          <%= label_tag 'email', nil, class: 'sr-only' %>
          <%= text_field_tag 'user_to[email]', nil, { placeholder: "Email",  class: 'form-control input-sm' } %>
        </div>
      </div>
    </div>
  </div>
</div>