<div class="container">
  <div class="<%= @hidden_sm %> col-md-6 col-md-offset-3">
    <h3 class="row">Edit <%= resource.display_name %></h3>

    <%= render 'form' %>

    <div class="row">

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-primary' %></p>

      <%= link_to "Back", :back %>
    </div>

  </div>
</div>
