<div class="row">	

	<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), role: 'form', :html => { :method => :put } do |f| %>

    <%= devise_error_messages! %>
	  <%= f.hidden_field :invitation_token %>

	  <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_verification %>
      <%= f.password_field :password_verification, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit", :class => 'btn btn-primary' %>
    </div>
	<% end %>
</div>