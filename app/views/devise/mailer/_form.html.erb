<%= form_for(@user, :role => 'form', :url => { :action => "deliver" }, method: "get") do |f| %>
	<%= render 'layouts/errors', index: @user %>

	<div class="form-group">
		<%= f.label :display_name, "For" %>
		<div class="form-control-static"><%= @user.display_name %></div>
	</div>

	<div class="form-group">
		<%= f.label :email,"To" %>
		<div class="form-control-static"><%= @user.email %></div>
	</div>

	<div class="form-group">
		<%= label_tag :message,"Message" %>
		<%= text_area_tag "message", nil, class: "form-control" %>
	</div>

	<p><%= t("devise.mailer.invitation_instructions.someone_invited_you", url: "WhoPaid") %></p>

	<p>Token: <%= @token %></p>

	<p><%= accept_invitation_url(@user, :invitation_token => @token) %></p>

	<p><%= t("devise.mailer.invitation_instructions.ignore").html_safe %></p>

	<div class="row">
		<div class="form-group col-md-4">
			<%= f.submit 'Submit', :class => 'btn btn-primary' %>
			<%= link_to 'Cancel', users_path, :class => 'btn btn-default' %>
		</div>
	</div>

<% end %>