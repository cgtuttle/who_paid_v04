<div class="container-fluid">
	
	<div class="panel panel-primary">
		<div class="panel-heading">
			<div class="row">
				<h3 class="panel-title col-xs-6"><%= @account.name %></h3>
				<h3 class="panel-title col-xs-6 text-right"><%= number_to_currency(@account.balance) %></h3>
			</div>
		</div>
	</div>
	
	<div class="row">		
		<div class="col-lg-2 col-lg-push-10 col-md-6 col-md-push-6 col-xs-12">			
			<%= render partial: 'payments/form', locals: { payment: @payment } %>
		</div>
		
		<div class="col-lg-8 col-md-12 col-xs-12">
			<div class="well">
				<h4>Transactions</h4>
				<%= render partial: 'transactions', locals: { transactions: @transactions } %>
			</div>
		</div>

	</div>
</div>

<script type="text/javascript">
  $('.datepicker').datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true});
</script>
